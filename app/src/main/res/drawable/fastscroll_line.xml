<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <aapt:attr name="android:drawable" >
            <shape android:shape="rectangle">
                <solid android:color="?attr/colorOnBackground" />
                <padding
                    android:top="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
            </shape>
        </aapt:attr>
    </item>

    <item>
        <aapt:attr name="android:drawable" >
            <shape android:shape="rectangle">
                <solid android:color="?attr/colorOnBackground" />
                <padding
                    android:top="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
            </shape>
        </aapt:attr>
    </item>
</selector>