<resources>
    <!-- Base application theme. -->
    <style name="Theme.Grouptuity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorTertiary">@color/gray</item>
        <item name="colorTertiaryVariant">@color/gray_dark</item>
        <item name="colorOnTertiary">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="offColorSurface">@color/off_white</item>
        <item name="colorSurfaceVariant">@color/gray</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorBaseBackground">@color/gray_light</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Grouptuity.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Grouptuity.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Grouptuity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/red</item>
        <item name="android:statusBarColor">@color/red_dark</item>
    </style>
</resources>