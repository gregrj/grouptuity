<resources>
    <!-- Base application theme. -->
    <style name="Theme.Grouptuity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryHighlight">@color/blue</item>

        <item name="colorTertiary">@color/gray</item>
        <item name="colorTertiaryVariant">@color/gray_dark</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryHighlight">@color/gray_light</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/gray_light</item>
        <item name="colorOnSurface">@color/gray_dark</item>
        <item name="colorOnSurfaceMediumEmphasis">@color/gray</item>
        <item name="colorOnSurfaceLowEmphasis">@color/off_white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorBackground">@color/white</item>
        <item name="colorBackgroundVariant">@color/gray_light</item>
        <item name="colorOnBackground">@color/gray_dark</item>
        <item name="colorOnBackgroundMediumEmphasis">@color/gray</item>
        <item name="colorOnBackgroundLowEmphasis">@color/off_white</item>

        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Grouptuity.Secondary" parent="Theme.Grouptuity">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
    </style>

    <style name="Theme.Grouptuity.Settings" parent="Theme.Grouptuity">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray_light</item>
        <item name="colorOnPrimary">@color/gray_dark</item>

        <item name="android:editTextColor">@color/gray_dark</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="Theme.Grouptuity.Camera" parent="Theme.Grouptuity">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorBackground">@color/black</item>
    </style>

    <style name="Theme.Grouptuity.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Grouptuity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Grouptuity.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/red</item>
        <item name="android:statusBarColor">@color/red_dark</item>
    </style>

    <style name="AlertDialogPosSuggestionSecondary" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/blue</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
    </style>

    <style name="AlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/gray_dark</item>
        <item name="android:editTextColor">@color/gray_dark</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="android:textColorHighlight">@color/gray_light</item>
    </style>

    <style name="AppThemeSecondaryEditTextActionView" parent="Theme.Grouptuity.Secondary">
        <item name="searchViewStyle">@style/EditTextActionViewStyle</item>
    </style>

    <style name="EditTextActionViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>
</resources>