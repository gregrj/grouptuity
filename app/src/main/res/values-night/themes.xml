<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Grouptuity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red_dark</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/black</item>
        <item name="offColorSurface">@color/off_black</item>
        <item name="colorSurfaceVariant">@color/black</item>
        <item name="colorOnSurface">@color/gray_light</item>

        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/gray_light</item>
        <item name="colorBaseBackground">@color/black</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>
</resources>