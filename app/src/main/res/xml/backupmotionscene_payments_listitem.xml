<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/default_to_selecting_method"
        motion:constraintSetStart="@+id/default_state"
        motion:constraintSetEnd="@id/selecting_method_state"
        motion:layoutDuringTransition="honorRequest"
        motion:duration="@integer/card_flip_time_full">

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/payer_contact_icon"
                motion:framePosition="20"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/payer"
                motion:framePosition="20"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/pay_instructions"
                motion:framePosition="20"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/amount"
                motion:framePosition="20"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/active_payment_method_icon"
                motion:framePosition="49"
                android:alpha="1"/>
            <KeyAttribute
                motion:motionTarget="@+id/close_payment_method_list_button"
                motion:framePosition="49"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/active_payment_method_icon"
                motion:framePosition="51"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/close_payment_method_list_button"
                motion:framePosition="51"
                android:alpha="1"/>
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/selecting_method_to_default"
        motion:constraintSetStart="@+id/selecting_method_state"
        motion:constraintSetEnd="@id/default_state"
        motion:layoutDuringTransition="honorRequest"
        motion:duration="@integer/card_flip_time_full">

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/payer_contact_icon"
                motion:framePosition="80"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/payer"
                motion:framePosition="80"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/pay_instructions"
                motion:framePosition="80"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/amount"
                motion:framePosition="80"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/active_payment_method_icon"
                motion:framePosition="49"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/close_payment_method_list_button"
                motion:framePosition="49"
                android:alpha="1"/>
            <KeyAttribute
                motion:motionTarget="@+id/active_payment_method_icon"
                motion:framePosition="51"
                android:alpha="1"/>
            <KeyAttribute
                motion:motionTarget="@+id/close_payment_method_list_button"
                motion:framePosition="51"
                android:alpha="0"/>
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/selecting_method_to_showing_instructions"
        motion:constraintSetStart="@+id/selecting_method_state"
        motion:constraintSetEnd="@id/showing_instructions_state"
        motion:layoutDuringTransition="honorRequest"
        motion:duration="@integer/card_flip_time_full">
    </Transition>

    <Transition
        android:id="@+id/showing_instructions_to_default"
        motion:constraintSetStart="@+id/selecting_method_state"
        motion:constraintSetEnd="@id/default_state"
        motion:layoutDuringTransition="honorRequest"
        motion:duration="@integer/card_flip_time_full">

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/payer_contact_icon"
                motion:framePosition="80"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/payer"
                motion:framePosition="80"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/pay_instructions"
                motion:framePosition="80"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/amount"
                motion:framePosition="80"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/active_payment_method_icon"
                motion:framePosition="49"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/close_payment_method_list_button"
                motion:framePosition="49"
                android:alpha="1"/>
            <KeyAttribute
                motion:motionTarget="@+id/active_payment_method_icon"
                motion:framePosition="51"
                android:alpha="1"/>
            <KeyAttribute
                motion:motionTarget="@+id/close_payment_method_list_button"
                motion:framePosition="51"
                android:alpha="0"/>
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/default_to_candidate"
        motion:constraintSetStart="@+id/default_state"
        motion:constraintSetEnd="@id/candidate_state"
        motion:duration="@integer/card_flip_time_full">

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/payment_method_button_placeholder"
                motion:framePosition="20"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/pay_instructions"
                motion:framePosition="20"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/amount"
                motion:framePosition="20"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/active_payment_method_icon"
                motion:framePosition="20"
                android:alpha="0"/>
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/candidate_to_default"
        motion:constraintSetStart="@+id/candidate_state"
        motion:constraintSetEnd="@id/default_state"
        motion:duration="@integer/card_flip_time_full">

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/payment_method_button_placeholder"
                motion:framePosition="80"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/pay_instructions"
                motion:framePosition="80"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/amount"
                motion:framePosition="80"
                android:alpha="0"/>
            <KeyAttribute
                motion:motionTarget="@+id/active_payment_method_icon"
                motion:framePosition="80"
                android:alpha="0"/>
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/default_to_ineligible"
        motion:constraintSetStart="@+id/default_state"
        motion:constraintSetEnd="@id/ineligible_state"
        motion:duration="@integer/card_flip_time_full"/>

    <Transition
        android:id="@+id/ineligible_to_default"
        motion:constraintSetStart="@+id/ineligible_state"
        motion:constraintSetEnd="@id/default_state"
        motion:duration="@integer/card_flip_time_full"/>

    <ConstraintSet android:id="@+id/default_state">
        <Constraint android:id="@+id/active_payment_method_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:rotationY="0"
            android:alpha="1"
            motion:visibilityMode="ignore"/>

        <Constraint android:id="@+id/close_payment_method_list_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:rotationY="180"
            android:alpha="0"
            motion:visibilityMode="ignore"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/selecting_method_state">
        <Constraint android:id="@+id/payer_contact_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            motion:layout_constraintBottom_toBottomOf="@+id/payer"
            motion:layout_constraintDimensionRatio="W,1:1"
            motion:layout_constraintStart_toEndOf="@+id/payment_method_button_placeholder"
            motion:layout_constraintTop_toTopOf="@+id/payer"
            android:alpha="0"/>

        <Constraint android:id="@+id/payer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            motion:layout_goneMarginBottom="8dp"
            motion:layout_constraintBottom_toTopOf="@id/pay_instructions_placeholder"
            motion:layout_constraintEnd_toStartOf="@+id/amount_placeholder"
            motion:layout_constraintStart_toEndOf="@id/payer_contact_icon"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="0"/>

        <Constraint android:id="@+id/pay_instructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/amount_placeholder"
            motion:layout_constraintStart_toEndOf="@+id/payment_method_button_placeholder"
            motion:layout_constraintTop_toBottomOf="@id/payer"
            android:alpha="0"/>

        <Constraint android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="0"/>

        <Constraint android:id="@+id/active_payment_method_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:rotationY="-180"
            android:alpha="0"
            motion:visibilityMode="ignore"/>

        <Constraint android:id="@+id/close_payment_method_list_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:rotationY="0"
            android:alpha="1"
            motion:visibilityMode="ignore"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/showing_instructions_state">
        <Constraint android:id="@+id/payer_contact_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            motion:layout_constraintBottom_toBottomOf="@+id/payer"
            motion:layout_constraintDimensionRatio="W,1:1"
            motion:layout_constraintStart_toEndOf="@+id/payment_method_button_placeholder"
            motion:layout_constraintTop_toTopOf="@+id/payer"
            android:alpha="0"/>

        <Constraint android:id="@+id/payer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            motion:layout_goneMarginBottom="8dp"
            motion:layout_constraintBottom_toTopOf="@id/pay_instructions_placeholder"
            motion:layout_constraintEnd_toStartOf="@+id/amount_placeholder"
            motion:layout_constraintStart_toEndOf="@id/payer_contact_icon"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="0"/>

        <Constraint android:id="@+id/pay_instructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/amount_placeholder"
            motion:layout_constraintStart_toEndOf="@+id/payment_method_button_placeholder"
            motion:layout_constraintTop_toBottomOf="@id/payer"
            android:alpha="0"/>

        <Constraint android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="0"/>

        <Constraint android:id="@+id/payment_methods_expanding_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="@id/payment_method_button_placeholder"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="0"/>

        <Constraint android:id="@+id/active_payment_method_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:rotationY="-180"
            android:alpha="0"
            motion:visibilityMode="ignore"/>

        <Constraint android:id="@+id/close_payment_method_list_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:rotationY="0"
            android:alpha="1"
            motion:visibilityMode="ignore"/>

        <Constraint android:id="@+id/selection_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/payment_method_button_placeholder"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="1"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/candidate_state">
        <Constraint android:id="@+id/payment_method_button_placeholder"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <Constraint android:id="@+id/active_payment_method_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="0"
            motion:visibilityMode="ignore"/>

        <Constraint android:id="@+id/pay_instructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/amount_placeholder"
            motion:layout_constraintStart_toEndOf="@+id/payment_method_button_placeholder"
            motion:layout_constraintTop_toBottomOf="@id/payer"
            android:visibility="gone"/>

        <Constraint android:id="@+id/amount_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <Constraint android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="0"/>

        <Constraint android:id="@+id/payer_contact_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"/>

        <Constraint android:id="@+id/payer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="12dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/payer_contact_icon"
            motion:layout_constraintTop_toTopOf="parent"
            android:transformPivotX="0dp"
            android:transformPivotY="22sp"
            android:scaleX="1.22"
            android:scaleY="1.22">
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/ineligible_state">
        <Constraint android:id="@+id/payment_method_button_placeholder"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <Constraint android:id="@+id/active_payment_method_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="0"
            motion:visibilityMode="ignore"/>

        <Constraint android:id="@+id/pay_instructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/amount_placeholder"
            motion:layout_constraintStart_toEndOf="@+id/payment_method_button_placeholder"
            motion:layout_constraintTop_toBottomOf="@id/payer"
            android:visibility="gone"/>

        <Constraint android:id="@+id/amount_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <Constraint android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="0"/>

        <Constraint android:id="@+id/payer_contact_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"/>

        <Constraint android:id="@+id/payer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="12dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/payer_contact_icon"
            motion:layout_constraintTop_toTopOf="parent"
            android:transformPivotX="0dp"
            android:transformPivotY="22sp"
            android:scaleX="1.22"
            android:scaleY="1.22">
        </Constraint>
    </ConstraintSet>
</MotionScene>
